---
mainClass: "main"
metaDescription: "Hello, I'm Brad Harris. I help build products with software, and love the web ❤️. I live in Castle Rock, Colorado and stay busy enjoying life with my family."
thumbnailImage: "/post-thumbnails/brad.jpg"
thumbnailImageAlt: "Picture of Brad Harris"
twitterCard: "summary"
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="theme-color" content="#0C171C">
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <link rel="icon" type="image/png" href="/favicon-32x32.png">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playball&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles/styles.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.5.0/styles/default.min.css">
  <link rel="stylesheet" href="/styles/monokai.css" />

  <title>{{ title }}</title>
  <meta content="{{metaDescription}}" name="description">

  {# OG tags #}
  <meta property="og:url" content="{{url | url(true) }}" >
  <meta property="og:title" content="{{title}}" >
  {% if thumbnailImage %}
    <meta property="og:image" content="{{thumbnailImage | url(true) }}" >
  {% endif %}
  {# use the excerpt if its there, otherwise default description #}
  {% if excerpt %}
    <meta property="og:description" content="{{excerpt}}" >
  {% else %}
    <meta property="og:description" content="{{metaDescription}}" >
  {%endif %}
  {# Twitter tags #}
  <meta name="twitter:card" content="{{twitterCard}}" >
  <meta name="twitter:site" content="@selfc0ntained" >
  <meta name="twitter:creator" content="@selfc0ntained" >
  <meta name="twitter:title" content="{{title}}" >
  {# use the excerpt if its there, otherwise default description #}
  {% if excerpt %}
    <meta name="twitter:description" content="{{excerpt}}" >
  {% else %}
    <meta name="twitter:description" content="{{metaDescription}}" >
  {%endif %}
  {% if thumbnailImage %}
    <meta name="twitter:image" content="{{thumbnailImage | url(true) }}" >
  {% endif %}
  {% if thumbnailImageAlt %}
    <meta name="twitter:image:alt" content="{{thumbnailImageAlt}}" >
  {% endif %}

  <script>
    (() => {
      // prevent flashing of light=>dark mode on load
      const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches
      const darkEnabled = localStorage.getItem('dark-mode')
      if(darkEnabled === "true" || (prefersDark && darkEnabled !== "false")) {
        document.documentElement.classList.toggle("dark-mode", true);
      }
    })();
  </script>
</head>
<body>
  <div id="main-layout">
    <header>
      <nav>
        <ul>
          <li><a href="/">bradharris.dev</a></li>
          <li><a href="{{ '~/about.md' | url }}">about</a></li>
          <li><a href="{{ '~/posts/index.njk' | url }}">posts</a></li>
        </ul>
      </nav>
      <dark-mode-toggle key="dark-mode" darkmode-class="dark-mode" />
    </header>


    <main class="{{ mainClass }}">
      {{ content | safe }}
    </main>
    <footer>
      <span>© {{ now | date('yyyy') }} Brad Harris</span>
      <a href="https://twitter.com/selfc0ntained" rel="me"><img src="/icons/twitter.png" width="15" class="glow-2"/></a>
      <a href="https://github.com/selfcontained" rel="me"><img src="/icons/github.png" width="15" class="glow"/></a>
      <a href="https://www.linkedin.com/in/bradharris/" rel="me"><img src="/icons/linkedin.png" width="15" class="glow-3"/></a>
      <dark-mode-toggle key="dark-mode" darkmode-class="dark-mode" />
    </footer>
  </div>
  <script src="/scripts/dark-mode-toggle.js"></script>
  {% if dev != true %}
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-49NP8W3EPZ"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-49NP8W3EPZ');
    </script>
  {% endif %}
</body>
</html>
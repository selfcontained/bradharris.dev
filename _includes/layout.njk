---
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{{ title }}</title>
  <link rel="icon" type="image/png" href="/favicon-32x32.png">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playball&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/assets/styles.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.5.0/styles/default.min.css">
  <link rel="stylesheet" href="/assets/monokai.css" />
  <script>
    (() => {
      // prevent flashing of light=>dark mode on load
      const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches
      const darkEnabled = localStorage.getItem('dark-mode')
      if(darkEnabled === "true" || (prefersDark && darkEnabled !== "false")) {
        document.documentElement.classList.toggle("dark-mode", true);
      }
    })();
  </script>
</head>
<body>
  <div id="main-layout">
    <header>
      <nav>
        <ul>
          <li><a href="/">bradharris.dev</a></li>
          <li><a href="{{ '~/about.md' | url }}">about</a></li>
          <li><a href="{{ '~/posts/index.njk' | url }}">posts</a></li>
        </ul>
      </nav>
    </header>
    

    <main class="{{ mainClass }}">
      {{ content | safe }}
    </main>
    <footer>
      <span>Â© {{ now | date('yyyy') }} Brad Harris</span>
      <a href="https://twitter.com/selfc0ntained"><img src="/icons/twitter.png" width="15"/></a>
      <a href="https://github.com/selfcontained"><img src="/icons/github.png" width="15"/></a>
      <a href="https://www.linkedin.com/in/bradharris/"><img src="/icons/linkedin.png" width="15"/></a>
      <div class="dark-mode-toggle-container">
        <input type="checkbox" class="checkbox" id="dm-toggle">
        <label for="dm-toggle" class="label">
          <div class='ball'></div>
          <span class="dark-label">D</span>
          <span class="light-label">L</span>
        </label>
      </div>
    </footer>
  </div>
  <script src="/scripts/dark-mode-toggle.js"></script>
</body>
</html>